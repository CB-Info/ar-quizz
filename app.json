{
  "expo": {
    "name": "AR Quiz Langues",
    "slug": "ar-quiz-langues",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "arquiz",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to the camera for AR functionality.",
        "NSMicrophoneUsageDescription": "Microphone access is required for recording video."
      }
    },
    "android": {
      "permissions": ["CAMERA", "RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser", "react-native-vision-camera"],
    "experiments": {
      "typedRoutes": true
    }
  }
}